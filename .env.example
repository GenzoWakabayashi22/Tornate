# ========================================
# CONFIGURAZIONE TORNATE R∴L∴ KILWINNING
# ========================================
# Copia questo file in .env e configura i valori

# ========== AMBIENTE ==========
NODE_ENV=production
PORT=3000

# ========== DATABASE ==========
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_database_user
DB_PASSWORD=your_strong_password_here
DB_NAME=kilwinning_db

# ========== SESSIONI ==========
# IMPORTANTE: Genera una stringa casuale di almeno 32 caratteri
# Puoi usare: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=CHANGE_THIS_TO_A_RANDOM_32_CHAR_STRING

# ========== SSO (Single Sign-On) ==========
# Chiavi segrete per la firma dei token JWT per SSO tra applicazioni
# IMPORTANTE: Devono essere condivise tra Tornate e le rispettive applicazioni
# Genera stringhe casuali di almeno 32 caratteri
FINANZE_JWT_SECRET=kilwinning_finanze_secret_key_2025_super_secure
BIBLIOTECA_JWT_SECRET=kilwinning_biblioteca_secret_key_2025_super_secure

# ========== SICUREZZA ==========
# Domini consentiti per CORS (separati da virgola)
ALLOWED_ORIGINS=https://tornate.loggiakilwinning.com,https://biblioteca.loggiakilwinning.com

# ========== LOGGING ==========
# Livelli: error, warn, info, debug
LOG_LEVEL=info
LOG_DIR=./logs

# ========== REDIS (Opzionale - per session store in futuro) ==========
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# ========== RATE LIMITING ==========
# Numero massimo di richieste per IP per finestra temporale
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=900000

# ========== BACKUP ==========
BACKUP_DIR=./backups
AUTO_BACKUP_ENABLED=true
